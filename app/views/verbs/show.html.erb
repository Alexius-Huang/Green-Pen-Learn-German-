<div class="container-fluid">
	<%= render 'verb_view_common/functional_links', verb: @verb, is_admin: @is_admin %>
	
	<br>
	<h1 class="caption-title"><%= @verb.title %></h1>
	<hr><br>

	<div class="row">
		<div class="col-md-offset-3 col-md-6">
			<div class="panel panel-success">
				<div class="panel-heading">Description</div>
				<div class="panel-body"><%= @verb.description %></div>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-md-offset-1" style="padding-left: 140px;">
			<% [
						["present", @present, @personalpronomen_present, @grammer_present	],
						["past", 		@past, 		@personalpronomen_past,		 @grammer_past		],
						["perfect", @perfect, @personalpronomen_perfect, @grammer_perfect	]
					].each do |partial, verb_tense, personalpronomen, grammer| %>
				<%= render "verb_view_common/verb_tense/verb_#{partial}", verb_tense: verb_tense, personalpronomen: personalpronomen, grammer: grammer, verb: @verb, is_admin: @is_admin %>
			<% end %>
		</div>
	</div>

</div>