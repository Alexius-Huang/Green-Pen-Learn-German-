<div class="col-xs-6 col-md-3">
  <div class="thumbnail">
		<% unless verb_tense.nil? %>
			<table class="table table-hover">
				<caption class="caption-title"><h3>Präsent</h3></caption>
				<%= render 'verb_view_common/thumbnail_partial', personalpronomen: personalpronomen, grammer: grammer, verb_tense: verb_tense %>
				<tr>
					<td colspan="2">
						<% if is_admin %>
							<%= link_to "Edit", edit_verb_present_path(verb, verb_tense), :class => "btn btn-sm btn-primary pull-right" %>
						<% end %>
					</td>
				</tr>
			</table>
		<% else %>
      <img src="http://images.vectorhq.com/images/previews/cd1/blue-question-mark-clip-art-99583.png" alt="question" style="width: 170px; height= 170px; padding-top: 10px;">
			<div class="caption">
				<h3>Präsent</h3>
				<p>There is no "präsent" information in this verb currently.</p>
				<% if is_admin %>
					<%= link_to "Add Information", new_verb_present_path(verb), :class => "btn btn-sm btn-success" %>
				<% end %>
			</div>
		<% end %>
	</div>
</div>