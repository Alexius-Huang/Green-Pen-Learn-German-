<%= simple_form_for [verb, perfect] do |f| %>
	<div class="form-group">
		<% personalpronomen_perfect.zip(grammer_perfect).each do |personalpronomen, grammer| %>
			<%= f.input personalpronomen.to_sym, label: grammer, input_html: { :class => "form-control" } %>
		<% end %>
	</div>
	<%= f.submit "Submit", :class => "btn btn-success", data: { disable_with: "Submitting..." } %>
<% end %>