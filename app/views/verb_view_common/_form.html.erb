<%= simple_form_for verb do |f| %>
	<div class="form-group">
		<%= f.input :title, autofocus: true, input_html: { :class => "form-control" } %>
		<%= f.input :description, input_html: { :class => "form-control" } %>
	</div>
	<%= f.submit "Submit", :class => "btn btn-success", data: { disable_with: "Submitting..." } %>
<% end %>