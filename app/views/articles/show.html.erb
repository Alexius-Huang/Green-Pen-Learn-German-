<div class="container-fluid">
	<%= link_to "Back", articles_path, :class => "btn btn-primary pull-right" %>
	<% if current_user == @user %>
		<%= link_to "Delete Article", article_path(@article), :method => :delete, :class => "btn btn-danger pull-right", data: { confirm: "Are you sure?" } %>
		<%= link_to "Edit Article", edit_article_path(@article), :class => "btn btn-success pull-right" %>
	<% end %>
	<br>
	<h1 class="caption-title"><%= @article.title %></h1>

	<div class="row">
		<div class="col-md-offset-2 col-md-8">
			<hr>
			<div class="panel-heading">Content</div>
			<div class="panel-body" style="margin-bottom: 0px"><%= @article.content %></div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-offset-2 col-md-8">
			<br>
			<hr>
			<% unless current_user.nil? %>
				<a href="#" id="comment-link"><div class="panel-heading">Comment</div></a>
			<% else %>
				<div class="panel-heading"><%= link_to "Please Sign In Before Commenting", new_user_session_path, style: "color: white" %></div>			
			<% end %>

			<div id="comments">
				<%= render @comments %>
			</div>

			<div class="panel-body" id="comment-form">
				<%= render 'comments/form', article: @article %>
			</div>
		</div>
	</div>

	<div class="gap"></div>
</div>