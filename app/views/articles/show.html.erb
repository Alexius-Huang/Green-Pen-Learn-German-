<div class="container-fluid">
	<%= link_to "Back", articles_path, :class => "btn btn-primary pull-right" %>
	<% if current_user == @user %>
		<%= link_to "Delete Article", article_path(@article), :method => :delete, :class => "btn btn-danger pull-right", data: { confirm: "Are you sure?" } %>
		<%= link_to "Edit Article", edit_article_path(@article), :class => "btn btn-success pull-right" %>
	<% end %>

	<h1 class="caption-title"><%= @article.title %></h1>

	<div class="row">
		<div class="col-md-offset-2 col-md-8">
			<hr>
			<div class="panel-heading">Content</div>
			<div class="panel-body"><%= @article.content %></div>
		</div>
	</div>
	<br>

	<h3 class="caption-title">Comments</h3>
	
	<div class="row">
		<div class="col-md-offset-3 col-md-6">
			<%= link_to "New Comment", new_article_comment_path(@article), :class => "btn btn-warning btn-sm pull-right" %>
			<br>
			<hr>
			<div class="panel-heading">Comment</div>
			<% @comments.each do |comment| %>
				<div class="panel-body" style="margin-bottom: 0px;">
					<h5>Created by <%= comment.user.username %></h5>
					<p><%= comment.content %></p>
				</div>
			<% end %>
		</div>
	</div>

</div>