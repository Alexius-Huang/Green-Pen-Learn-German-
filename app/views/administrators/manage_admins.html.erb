<div class="container-fluid">
	<div class="col-md-offset-3 col-md-6">
		<h1 class="caption-title">Manage Administrators</h1>
		<hr>

		<table class="table table-hover">
			<thead>
				<tr>
					<th>#</th>
					<th>Admin' Name</th>
					<th>Admin' Email</th>
					<td>Manage Operation</td>
				</tr>
			</thead>

			<tbody>
				<% @admins.each.with_index do |admin, index| %>
					<tr>
						<td><%= index + 1 %></td>
						<td><%= admin.username %></td>
						<td><%= admin.email %></td>
						<% if current_user == admin %>
							<td>This is you!</td>
						<% else %>
							<td><%= link_to "Cancel Admin", administrators_manage_admins_path(admin), :method => :patch, :class => "btn btn-danger btn-xs", data: { confirm: "Are you sure to cancel the administrator?" } %></td>
						<% end %>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>